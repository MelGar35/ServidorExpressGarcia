<div>
  <div class="p2">
    <table class="table">
      <thead class="table-dark">
        <tr>
          <th> Title </th>
          <th> Description </th>
          <th> Category </th>
          <th> Price </th>
          <th> Stock </th>
          <th> Comprar </th>
          
        </tr>
      </thead>
      <tbody>
        {{#each result.docs}}
        <tr>
          <td> {{this.title}} </td>
          <td> {{this.description}} </td>
          <td> {{this.category}} </td>
          <td> {{this.price}} </td>
          <td> {{this.stock}} </td>
          <td><button>Agregar</button></td>
          <td>
          </td>
        </tr>
        {{/each}}
      </tbody>
    </table>
  </div>

  <hr>

  <div>
        <a href="/products?page={{result.prevPage}}&&limit=">Prev</a>
        <a href="/products?page={{result.nextPage}}">Next</a>
    </div>
<h5>
      {{ result.page }} / {{ result.totalPages }}
    </h5>
 
</div>